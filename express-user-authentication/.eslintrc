{
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-unreachable": 2,
    "eqeqeq": [
      2,
      "smart"
    ],
    "no-undef": 2,
    "no-unused-vars": 2,
    "indent": ["error", 2]
  },
  "parserOptions": {
    "ecmaVersion": 8
  }
}
